{
  "name": "@strivacity/sdk-js",
  "version": "0.0.2",
  "description": "Strivacity JavaScript SDK",
  "license": "MIT",
  "author": "strivacity<info@strivacity.com>",
  "unpkg": "./dist/index.mjs",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "examples/*",
    "dist/*",
    "src/*",
    "!src/*.spec.ts"
  ],
  "exports": {
    ".": "./dist/index.mjs"
  },
  "gitHooks": {
    "commit-msg": "commitlint -V -e $GIT_PARAMS",
    "pre-commit": "nano-staged"
  },
  "nano-staged": {
    "*.{mjs,js,ts}": [
      "prettier --write --ignore-unknown"
    ],
    "*.{css,scss}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepublishOnly": "pnpm run build",
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@types/node": "^20.11.7",
    "@vitest/coverage-v8": "^1.2.2",
    "jsdom": "^24.0.0",
    "lerna": "^8.0.2",
    "nano-staged": "^0.8.0",
    "prettier": "3.2.4",
    "typescript": "~5.3.0",
    "vite": "^5.0.12",
    "vite-plugin-dts": "^3.7.2",
    "vitest": "^1.2.2",
    "vitest-fetch-mock": "^0.2.2",
    "yorkie": "^2.0.0"
  }
}
